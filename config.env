# Hyperliquid Node Environment Configuration
# Network type: mainnet or testnet
HL_NETWORK=testnet

# GPG Public Key URL
PUB_KEY_URL=https://raw.githubusercontent.com/hyperliquid-dex/node/refs/heads/main/pub_key.asc

# Root Node IP Addresses (comma-separated)
ROOT_NODE_IPS=64.31.48.111,64.31.51.137

# Whether to try new peers
TRY_NEW_PEERS=true

# Reserved Peer IPs (comma-separated, optional)
RESERVED_PEER_IPS=

# Data writing options
WRITE_TRADES=true
WRITE_FILLS=true
WRITE_ORDER_STATUSES=true
WRITE_MISC_EVENTS=true

# Service options
SERVE_ETH_RPC=true
SERVE_INFO=true

# Replica command style
REPLICA_CMDS_STYLE=actions
